<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<window type="window">
    <zorder>1</zorder>
    <controls>
        <!-- First are the controls that apply when the Trailer is playing
             (Text Overlay for Title and Notifications) -->
        <control type="group" id="38000">
            <control type="image">
                <description>Black background</description>
                <visible>true</visible>
                <!-- <visible>Skin.HasSetting(ShowTrailer)</visible> -->
                <posx>0</posx>
                <posy>0</posy>
                <width>1280</width>
                <height>720</height>
                <aspectratio>stretch</aspectratio>
                <texture background="true">solid-black.png</texture>
            </control>
            <control type="videowindow">
                <description>Private Video Window for trailer to avoid default
                    navigation action processing
                </description>
                <visible>Skin.HasSetting(ShowTrailer)</visible>
                <left>0</left>
                <top>0</top>
                <right>100%</right>
                <bottom>100%</bottom>
            </control>
        </control>
        <control type="group">
            <description>Wrapper group around everything except video window</description>
            <posx>0</posx>
            <posy>0</posy>
            <width>1280</width>
            <height>720</height>
            <visible>Skin.HasSetting(TrailerTextOverlay)</visible>
            <control type="group">
                <description>Optional title displayed while trailer is playing</description>
                <posx>0</posx>
                <posy>0</posy>
                <width>1280</width>
                <height>50</height>
                <visible>Skin.HasSetting(ShowTitle)+!Skin.HasSetting(Notification)</visible>
                <control type="image">
                    <description>Shadow Text background</description>
                    <posx>-0</posx>
                    <posy>0</posy>
                    <width>1280</width>
                    <height>45</height>
                    <visible>true</visible>
                    <aspectratio>stretch</aspectratio>
                    <texture>gray-back.png</texture>
                </control>
                <control type="label" id="38021">
                    <description>Title</description>
                    <posx>20</posx>
                    <posy>2</posy>
                    <width>1240</width>
                    <aligny>center</aligny>
                    <visible>Skin.HasSetting(ShowTitle)+!Skin.HasSetting(Notification)</visible>
                    <scroll>false</scroll>
                    <haspath>false</haspath>
                    <wrapmultiline>false</wrapmultiline>
                    <font>font25</font>
                    <textcolor>FFFFFFFF</textcolor>
                </control>
            </control>
            <control type="group" id="38022">
                <description>Notification that may appear while trailer is playing</description>
                <posx>0</posx>
                <posy>0</posy>
                <width>1280</width>
                <height>50</height>
                <visible>Skin.HasSetting(Notification)</visible>
                <control type="image">
                    <description>Shadow Text background</description>
                    <posx>0</posx>
                    <width>1280</width>
                    <visible>true</visible>
                    <aspectratio>stretch</aspectratio>
                    <texture>gray-back.png</texture>
                </control>
                <control type="label" id="38023">
                    <description>Notification</description>
                    <posx>20</posx>
                    <posy>2</posy>
                    <width>1240</width>
                    <height>40</height>
                    <aligny>center</aligny>
                    <alignx>center</alignx>
                    <visible>Skin.HasSetting(Notification)</visible>
                    <scroll>false</scroll>
                    <haspath>false</haspath>
                    <wrapmultiline>false</wrapmultiline>
                    <font>font30</font>
                    <textcolor>FFFFFFFF</textcolor>
                </control>
            </control>

            <control type="group" id="38001">
                <visible>Skin.HasSetting(ShowMovieDetails)</visible>
                <animation effect="fade" start="100" end="0" time="1000">WindowClose</animation>
                <animation effect="fade" start="0" end="100" time="1000">WindowOpen</animation>
                <!-- Black background for detail info must come first-->
                <control type="group">
                    <posx>0</posx>
                    <posy>0</posy>
                    <control type="image">
                        <description>Black background</description>
                        <posx>0</posx>
                        <posy>0</posy>
                        <width>1280</width>
                        <height>720</height>
                        <aspectratio>stretch</aspectratio>
                        <texture background="true">solid-black.png</texture>
                    </control>
                </control>
                <!-- TITLE -->
                <control type="label" id="38003">
                    <description>Title</description>
                    <posx>20</posx>
                    <posy>5</posy>
                    <width>1240</width>
                    <font>font25</font>
                    <textcolor>FFFFFFFF</textcolor>
                    <scroll>true</scroll>
                </control>
                <!-- Notification -->
                <control type="label" id="38024">
                    <description>Notification</description>
                    <posx>20</posx>
                    <posy>40</posy>
                    <width>1280</width>
                    <height>40</height>
                    <aligny>center</aligny>
                    <alignx>center</alignx>
                    <visible>Skin.HasSetting(Notification)</visible>
                    <scroll>false</scroll>
                    <haspath>false</haspath>
                    <wrapmultiline>false</wrapmultiline>
                    <font>font30</font>
                    <textcolor>FFFFFFFF</textcolor>
                </control>
                <!-- POSTER/COVER -->
                <control type="group">
                    <description>Main Poster plus three horizontal lines in text area</description>
                    <posx>880</posx>
                    <posy>100</posy>
                    <visible>Skin.HasSetting(ShowMovieDetails)</visible>
                    <control type="image" id="38002">
                        <description>Poster. Ratio 2h:3v</description>
                        <posx>0</posx>
                        <posy>1</posy>
                        <width>400</width>
                        <height>619</height>
                        <aspectratio>keep</aspectratio>
                        <fadetime>200</fadetime>
                        <texture background="true">noposter.png</texture>
                    </control>
                    <!-- Vertical Left border -->
                    <control type="image">
                        <posx>-1</posx>
                        <posy>0</posy>
                        <width>1</width>
                        <height>621</height>
                        <texture>line.png</texture>
                        <aspectratio>stretch</aspectratio>
                    </control>
                    <!-- Horizontal top -->
                    <control type="image">
                        <posx>-1</posx>
                        <posy>0</posy>
                        <width>404</width>
                        <height>1</height>
                        <texture>line.png</texture>
                        <aspectratio>stretch</aspectratio>
                    </control>
                </control>
                <control type="group">
                    <posx>0</posx>
                    <posy>100</posy>
                    <visible>Skin.HasSetting(ShowMovieDetails)</visible>
                    <!-- Horizontal Lines -->
                    <control type="image">
                        <posx>0</posx>
                        <posy>0</posy>
                        <width>880</width>
                        <height>1</height>
                        <aspectratio>stretch</aspectratio>
                        <texture background="true">line.png</texture>
                    </control>
                    <control type="image">
                        <posx>1</posx>
                        <posy>241</posy>
                        <width>880</width>
                        <height>1</height>
                        <aspectratio>stretch</aspectratio>
                        <texture background="true">line.png</texture>
                    </control>
                    <!-- movie fanart at upper-mid-left-->
                    <control type="image" id="38004">
                        <posx>2</posx>
                        <posy>1</posy>
                        <width>420</width>
                        <height>240</height>
                        <aspectratio>keep</aspectratio>
                        <fadetime>200</fadetime>
                        <texture background="true">preview.png</texture>
                    </control>
                </control>

                <!-- ShowMovieDetails MOVIES -->
                <control type="group">
                    <posx>428</posx>
                    <posy>119</posy>
                    <visible>Skin.HasSetting(ShowMovieDetails)</visible>
                    <control type="label" id="38025">
                        <description>Director</description>
                        <posx>5</posx>
                        <posy>13</posy>
                        <width>365</width>
                        <font>font25</font>
                        <!-- <label>$LOCALIZE[32176]</label> -->
                        <textcolor>FFFFFFFF</textcolor>
                    </control>
                    <control type="label" id="38005">
                        <description>Director</description>
                        <posx>5</posx>
                        <posy>33</posy>
                        <width>365</width>
                        <scrollsuffix>-</scrollsuffix>
                        <font>font13</font>
                        <textcolor>FFb4b4b4</textcolor>
                    </control>
                    <control type="label" id="38026">
                        <description>writer</description>
                        <posx>5</posx>
                        <posy>63</posy>
                        <width>365</width>
                        <font>font24</font>
                        <scroll>true</scroll>
                        <!-- <label fallback="Writer">$LOCALIZE[32177]</label> -->
                        <textcolor>FFFFFFFF</textcolor>
                    </control>
                    <control type="label" id="38007">
                        <description>Writer</description>
                        <posx>5</posx>
                        <posy>83</posy>
                        <width>365</width>
                        <scrollsuffix>-</scrollsuffix>
                        <font>font13</font>
                        <textcolor>FFb4b4b4</textcolor>
                    </control>
                    <control type="label" id="38027">
                        <description>Cast</description>
                        <posx>5</posx>
                        <posy>118</posy>
                        <width>365</width>
                        <!-- <label>[B]$LOCALIZE[32178][/B]</label> -->
                        <font>font24</font>
                        <textcolor>FFFFFFFF</textcolor>
                    </control>
                    <control type="label" id="38006">
                        <description>Cast</description>
                        <posx>5</posx>
                        <posy>138</posy>
                        <width>365</width>
                        <wrapmultiline>true</wrapmultiline>
                        <height>100</height>
                        <font>font13</font>
                        <textcolor>FFb4b4b4</textcolor>
                    </control>
                </control>

                <control type="group">
                    <posy>342</posy>
                    <posx>0</posx>
                    <height>378</height>
                    <width>880</width>
                    <visible>Skin.HasSetting(ShowMovieDetails)</visible>

                    <!-- PLOT -->
                    <control type="textbox" id="38009">
                        <description>Plot</description>
                        <posx>30</posx>
                        <posy>15</posy>
                        <width>820</width>
                        <height>205</height>
                        <spinposx>500</spinposx>
                        <spinposy>-30</spinposy>
                        <spinwidth>20</spinwidth>
                        <spinheight>11</spinheight>
                        <font>font13</font>
                        <align>justify</align>
                        <textcolor>FFb4b4b4</textcolor>
                        <textureup>-</textureup>
                        <texturedown flipy="true">-</texturedown>
                        <textureupfocus>-</textureupfocus>
                        <texturedownfocus flipy="true"></texturedownfocus>
                        <autoscroll delay="6000" time="2500" repeat="5000">Skin.HasSetting(ShowMovieDetails)</autoscroll>
                    </control>
                    <control type="label" id="38011">
                        <description>Duration/Genre</description>
                        <posx>30</posx>
                        <posy>90r</posy>
                        <width>auto</width>
                        <height>20</height>
                        <font>font13</font>
                        <textcolor>FFb4b4b4</textcolor>
                        <scroll>false</scroll>
                    </control>
                    <!--- STUDIO/YEAR -->
                    <control type="label" id="38010">
                        <description>Studio</description>
                        <posx>30</posx>
                        <posy>50r</posy>
                        <height>20</height>
                        <width>auto</width>
                        <font>font13</font>
                        <textcolor>FFb4b4b4</textcolor>
                        <scroll>false</scroll>
                    </control>

                    <!-- Star rating -->
                    <control type="image" id="38012">
                        <visible>true</visible>
                        <left>230r</left>
                        <posy>110r</posy>
                        <width>223</width>
                        <height>38</height>
                        <aspectratio>keep</aspectratio>
                        <!-- <animation effect="fade" start="100" end="60" time="0" condition="String.IsEmpty(ListItem.Rating)">Conditional</animation> -->
                    </control>

                    <!-- RATING -->
                    <control type="image" id="38013">
                        <description>Rating</description>
                        <posx>116r</posx>
                        <posy>66r</posy>
                        <height>65</height>
                        <width>115</width>
                        <aspectratio>keep</aspectratio>
                    </control>
                </control>
            </control>
        </control>
    </controls>

</window>
